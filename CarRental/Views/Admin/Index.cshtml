@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMjzzTn7g3cfM3Jk5TFSwzA7iv5tA0IUmH/eQo/" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
        }

        .main-title {
            text-align: center;
            padding: 20px;
            color: #333;
        }

            .main-title h2 {
                font-size: 2.5em;
            }

            .main-title p {
                font-size: 1.2em;
            }

        .btn-container {
            text-align: center;
            margin-top: 30px;
        }

            .btn-container a {
                display: inline-block;
                text-decoration: none;
                padding: 10px 20px;
                margin: 10px;
                background-color: #007bff;
                color: white;
                border-radius: 5px;
                font-size: 1.1em;
                transition: background-color 0.3s ease;
            }

                .btn-container a:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="main-title">
            <h2>Admin Dashboard</h2>
            <p>Welcome to the admin panel. Here you can manage users, view system logs, and perform other administrative tasks.</p>
        </div>
        <div class="btn-container">
            <a href="@Url.Action("Index", "Car")">Manage Cars</a>
            <a href="@Url.Action("Index", "Customer")">Manage Customers</a>
            <a href="@Url.Action("Index", "Reservation")">Manage Reservations</a>
            <a href="@Url.Action("Index", "Brand")">Manage Brands</a>
            <a href="@Url.Action("Index", "Location")">Manage Locations</a>
            <a href="@Url.Action("Index", "Profile")">Manage Profiles</a>
            <a href="@Url.Action("Index", "Home")">Go to Home</a>
        </div>
    </div>
</body>
</html>
