@model CarRental.Entities.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="text-center">
    <h1 style="color: blue; font-weight: bold;">Customer Details</h1>
    <h4 style="color: gray;">Customer Information</h4>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Customer ID</dt>
            <dd class="col-sm-8">@Model.CustomerID</dd>

            <dt class="col-sm-4">First Name</dt>
            <dd class="col-sm-8">@Model.FirstName</dd>

            <dt class="col-sm-4">Last Name</dt>
            <dd class="col-sm-8">@Model.LastName</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Phone</dt>
            <dd class="col-sm-8">@Model.Phone</dd>

            <dt class="col-sm-4">Address</dt>
            <dd class="col-sm-8">@Model.Address</dd>
        </dl>
        <div class="form-group">
            <a asp-action="Edit" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </div>
</div>
