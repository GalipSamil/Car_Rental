@model CarRental.Entities.Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<div class="text-center">
    <h1 style="color: blue; font-weight: bold;">Delete Reservation</h1>
    <h4 style="color: gray;"/h4>
    <p style="font-weight: bold;">Are you sure you want to delete this reservation?</p>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Reservation ID</dt>
            <dd class="col-sm-8">@Model.ReservationID</dd>

            <dt class="col-sm-4">Customer ID</dt>
            <dd class="col-sm-8">@Model.CustomerID</dd>

            <dt class="col-sm-4">Car Model</dt>
            <dd class="col-sm-8">@Model.CarID</dd>

            <dt class="col-sm-4">Start Date</dt>
            <dd class="col-sm-8">@Model.StartDate.ToString("MM/dd/yyyy HH:mm:ss")</dd>

            <dt class="col-sm-4">End Date</dt>
            <dd class="col-sm-8">@Model.EndDate.ToString("MM/dd/yyyy HH:mm:ss")</dd>

            <dt class="col-sm-4">Total Price</dt>
            <dd class="col-sm-8">@Model.TotalPrice</dd>

            <dt class="col-sm-4">Pickup Location Address</dt>
            <dd class="col-sm-8">@Model.PickupLocation.LocationAddress</dd>

            <dt class="col-sm-4">Dropoff Location Address</dt>
            <dd class="col-sm-8">@Model.DropoffLocation.LocationAddress</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="ReservationID" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>
