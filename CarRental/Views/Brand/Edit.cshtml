@model CarRental.Entities.Brand

@{
    ViewData["Title"] = "Edit Brand";
}

<div class="text-center">
    <h1 style="color: blue; font-weight: bold;">Edit Brand</h1>
    <h4 style="color: gray;">Brand Information</h4>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="BrandID" />
            <div class="form-group">
                <label asp-for="BrandName" class="control-label">Brand Name</label>
                <input asp-for="BrandName" class="form-control" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
