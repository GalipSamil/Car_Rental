@model CarRental.Entities.Brand

@{
    ViewData["Title"] = "Brand Details";
}

<div class="text-center">
    <h1 style="color: blue; font-weight: bold;">Brand Details</h1>
    <h4 style="color: gray;">Brand Information</h4>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">
                Brand ID
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.BrandID)
            </dd>
            <dt class="col-sm-4">
                Brand Name
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.BrandName)
            </dd>
        </dl>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.BrandID" class="btn btn-secondary">Edit</a>
            <a asp-action="Index" class="btn btn-primary ms-2">Back to List</a>
        </div>
    </div>
</div>
