@model CarRental.DTOs.ProfileDTO

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="text-center">
    <h1 style="color: blue; font-weight: bold;">Edit Profile</h1>
    <h4 style="color: gray;">Profil</h4>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="ProfileID" />
            <input type="hidden" asp-for="CustomerID" />
            <div class="form-group mb-3">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DriverLicenceNo" class="control-label"></label>
                <input asp-for="DriverLicenceNo" class="form-control" />
                <span asp-validation-for="DriverLicenceNo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary me-2" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
